{
  "compilerOptions": {
    "module": "ESNext",
    "jsx": "react",
    "composite": true,
    "incremental": true,
    "tsBuildInfoFile": "build/.tsbuildinfo",
    "outDir": "build", 
    "paths": {
      "app1/*": ["../app1/src/*"]
    }     
  },
  "references": [
    { "path": "../app1" }
  ],
  "include": [
    "./src/**/*"
  ],
  "exclude": ["node_modules", "build", "out", "public"]
}