{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react",
    "composite": true,
    "incremental": true,
    "tsBuildInfoFile": "build/.tsbuildinfo",
    "outDir": "build",
    "paths": {
      "host/*": ["../host/src/*"]
    }       
  },
  "references": [
    { "path": "../host" }
  ],
  "include": [
    "./src/**/*"
  ],
  "exclude": ["node_modules", "build", "out", "public"]
}